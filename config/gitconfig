[core]
  autocrlf = input
  whitespace = trailing-space,tab-in-indent
[apply]
  whitespace = error
[commit]
  gpgsign = true
[credential]
  helper = cache --timeout=900
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[svn]
  rmdir = true
[init]
  defaultBranch = main
[diff]
  external = difft
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[pager]
  difftool = true
[alias]
  dft = difftool
[gpg]
  format = ssh
[submodule]
  recurse = true
  fetchJobs = 0
[rebase]
  autoStash = true
[format]
  signOff = yes

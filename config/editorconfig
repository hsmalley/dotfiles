# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = false
max_line_length = 120

[*.py]
indent_style = space
indent_size = 4

[*.sh]
indent_size = 2

[*.{bat,ps1}]
end_of_line = crlf

[*.{md,yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{js,ts,json}]
indent_size = 2

[*.tsv]
indent_style = tab

[*.gql]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
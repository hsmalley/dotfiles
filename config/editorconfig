# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with no newline
[*]
end_of_line = lf
insert_final_newline = false
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.{md,yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{bat,ps1}]
end_of_line = crlf

[*.tsv]
indent_style = tab

[Makefile]
indent_style = tab